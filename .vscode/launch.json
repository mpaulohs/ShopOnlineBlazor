{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}\\Api\\bin\\Debug\\net6.0\\Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}\\Api\\",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "WebClient Watch",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/WebClient",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
            "preLaunchTask": "build" // Ensure we don't watch an unbuilt site
        },
        {
            "name": "WebClient Attach",
            "type": "blazorwasm",
            "request": "attach",
            "browser": "edge",
            "cwd": "${workspaceFolder}/WebClient",
            "url": "https://localhost:6001",  // Tell launch where to find site
            "timeout": 120000, // Allows time for the site to launch
        },
        {
            "name": "WebClient Debug Standalone",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/WebClient",
            "url": "https://localhost:6001" // Tell launch where to find site
        }
    ],
    "compounds": [
        {
            "name": "Debug Api + Watch WebClient",
            "configurations": ["Api Debug", "WebClient Watch"]
        },
        {
            "name": "Debug Api + Debug WebClient",
            "configurations": ["Api Debug", "WebClient Debug Standalone Blazor WebAssembly App"]
        },
        {
            "name": "Debug API + Debug WebClient Hot Reload",
            "configurations": [ "Api Debug","WebClient Watch", "WebClient Attach" ]
        }
    ]
}




