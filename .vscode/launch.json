{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api watch",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/Api",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
        },
        {
            "name": "Api debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "RebuildSolution",
            "program": "${workspaceFolder}\\Api\\bin\\Debug\\net6.0\\Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}\\Api\\",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "WebClient watch",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/WebClient",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
            // "preLaunchTask": "build" // Ensure we don't watch an unbuilt site
        },
        {
            "name": "WebClient attach",
            "type": "blazorwasm",
            "request": "attach",
            "browser": "chrome",
            "cwd": "${workspaceFolder}/WebClient",
            "url": "https://localhost:6001", // Tell launch where to find site
            "timeout": 120000, // Allows time for the site to launch
        },
        {
            "name": "WebClient debug standalone",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/WebClient",
            "url": "https://localhost:6001" // Tell launch where to find site
        }
    ],
    "compounds": [
        {
            "name": "Api watch + WebClient watch",
            "configurations": [
                "Api watch",
                "WebClient watch"
            ]
        },
        {
            "name": "Api debug + WebClient watch",
            "configurations": [
                "Api debug",
                "WebClient watch"
            ]
        },
        {
            "name": "Api debug + WebClient debug standalone",
            "configurations": [
                "Api debug",
                "WebClient debug standalone"
            ]
        },
        {
            "name": "Api watch + WebClient debug standalone",
            "configurations": [
                "Api watch",
                "WebClient debug standalone"
            ]
        },
        {
            "name": "Api watch + WebClient debug hot reload",
            "configurations": [
                "Api watch",
                "WebClient watch",
                "WebClient attach"
            ]
        }
    ]
}
