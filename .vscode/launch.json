{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api watch",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}\\Api\\",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
        },
        {
            "name": "Api debug",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}\\Api\\bin\\Debug\\net6.0\\Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}\\Api\\",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "WebClient watch",
            "preLaunchTask": "buildSolution",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}\\WebClient\\",
            "program": "dotnet",
            "console": "internalConsole",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
        },
        {
            "name": "WebClient attach",
            "type": "blazorwasm",
            "request": "attach",
            "urlFilter": "https://localhost:6001/*",
            "cwd": "${workspaceFolder}\\WebClient\\",
            "timeout": 120000,
        },
        {
            "name": "Attach Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 6001,
            "url": "https://localhost:6001/*",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "WebClient debug",
            "preLaunchTask": "buildSolution",
            "type": "blazorwasm",
            "request": "launch",
            "browser": "chrome",
            "url": "https://localhost:6001",
            "cwd": "${workspaceFolder}\\WebClient\\",
        }
    ],
    "compounds": [
        {
            "name": "Api watch + WebClient watch",
            "preLaunchTask": "rebuildAndApi",
            "configurations": [
                "WebClient watch"
            ]
        },
        {
            "name": "Api debug + WebClient watch",
            "configurations": [
                "Api debug",
                "WebClient watch"
            ]
        },
        {
            "name": "Api debug + WebClient debug",
            "configurations": [
                "Api debug",
                "WebClient debug"
            ]
        },
        {
            "name": "Api watch + WebClient debug",
            "configurations": [
                "Api watch",
                "WebClient debug"
            ]
        },
        {
            "name": "WebClient debug hot",
            "configurations": [
                "WebClient watch",
                "WebClient attach"
            ]
        }
    ]
}