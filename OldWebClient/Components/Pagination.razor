<nav aria-label="Page pagination">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>

    <ul class="pagination">
        @foreach (var item in itemsOnPageRanges)
        {
          <li class="page-item @(item==itemsOnPage?"active":"");"><a class="page-link" href="#">@item.ToString()</a></li>
        }
    </ul>
</nav>

@code {
    [Parameter]
    public int CurentPage { get; set; }

    [Parameter]
    public int TotalPages { get; set; }

    private IEnumerable<int> itemsOnPageRanges = new List<int>() { 5, 10, 25, 50 };

    private int itemsOnPage = 5;
}